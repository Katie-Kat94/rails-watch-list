<div class="header">
<h1> Welcome To The Film List Webpage</h1>
</div>

<% @lists.each do |list| %>
<%= link_to list_path(list) do %>
<div class="list_cards"
style="background-image: url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
<h3> <%= list.name %> </h3>
</div>
<% end %>
<% end %>


<%= link_to 'Add a New List', new_list_path %>
